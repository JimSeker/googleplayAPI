<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.cs4730.nearbyconnectiondemo.AdvertiseFragment">

    <Button
        android:id="@+id/start_advertise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Advertising"/>

    <Button
        android:id="@+id/end_advertise"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Disconnect and Stop"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/ad_output"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Output:\n"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
