<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="edu.cs4730.nearbymessagesdemo.PublishFragment">


    <Button
        android:id="@+id/start_publish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Start Publish."/>

    <Button
        android:id="@+id/end_publish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Stop Publish"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/pub_output"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Output:\n"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
