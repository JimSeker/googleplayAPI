<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
              android:orientation="vertical"
    tools:context="edu.cs4730.fitdemo.SessionFragment">

    <Button
        android:id="@+id/btn_display_seesion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View session for this week." />

     <Button
        android:id="@+id/btn_add_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add a new session" />

    <Button
        android:id="@+id/btn_delete_session"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete seession for yesterday." />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/loggersession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Output:\n" />
    </androidx.core.widget.NestedScrollView>

</LinearLayout>
